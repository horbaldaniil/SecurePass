<Page x:Class="SecurePass.Presentation.Pages.PasswordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecurePass.Presentation.Pages"
      mc:Ignorable="d" 
      d:Width="1500"
      Title="PasswordsPage">

    <Page.Resources>
        <Style TargetType="StackPanel" x:Key="PagePanel">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="60,40,60,40"/>
        </Style>
        
    </Page.Resources>

    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
        <StackPanel Style="{StaticResource PagePanel}" Grid.Column="1">
            <Label Content="{DynamicResource PasswordsPageTitle}" Style="{StaticResource pageLabel}"/>
            <ListView Name="DataBinding" BorderThickness="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border x:Name="RootBorder" BorderThickness="0,0,0,2" BorderBrush="#D9D9D9">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="100">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Margin="15,0,0,0" Foreground="#444444" IsReadOnly="True" Background="Transparent" HorizontalAlignment="Left" BorderThickness="0" FontSize="28" VerticalAlignment="Center" Text="{Binding Title}"/>
                            <TextBox IsReadOnly="True" Foreground="#444444" Background="Transparent"  HorizontalAlignment="Left" BorderThickness="0" FontSize="28" VerticalAlignment="Center" Grid.Column="1" Text="{Binding Password}" PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Border Style="{StaticResource AddNewButton}">
                <Image Opacity="0.3" Source="/Images/plus.png" MouseLeftButtonDown="AddNewButton_MouseLeftButtonDown"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
