    <System:String x:Key="CreatePasswordSaveButton">Save</System:String>
    <System:String x:Key="CreatePasswordCancelButton">Cancel</System:String>
    <System:String x:Key="PasswrodGeneratorTitle">Password Generator</System:String>
    <System:String x:Key="LengthStr">Length</System:String>
    <System:String x:Key="CapitalLettersStr">Use capital letters (A-Z)</System:String>
    <System:String x:Key="DigitsStr">Use digits (0-9)</System:String>
    <System:String x:Key="SymbolsStr">Use symbols (!@#$%^*)</System:String>
    <System:String x:Key="FillPasswordStr">Fill password</System:String>
    <System:String x:Key="ChangePassword">Change Password</System:String>

    <!-- Login/SignUp Page -->
    <System:String x:Key="LoginTitle">Login</System:String>
    <System:String x:Key="SignUpTitle">Sign up</System:String>
    <System:String x:Key="EmailTitle">Email</System:String>
    <System:String x:Key="PasswordTitle">Password</System:String>
    <System:String x:Key="LogInButton">Login</System:String>
    <System:String x:Key="SignupRedirectLabel">Sign up</System:String>
    <System:String x:Key="LoginUnderPageStr" xml:space="preserve">Don't have an account? </System:String>
    <System:String x:Key="SignUpUnderPageStr" xml:space="preserve">Already have an account? </System:String>
    <System:String x:Key="InvalidFormatEmail">Invalid email format</System:String>
    <System:String x:Key="InvalidPassword">Invalid password</System:String>
    <System:String x:Key="InvalidFormatPassword">Invalid password format</System:String>
    <System:String x:Key="NotFoundEmail">Email not found</System:String>
    <System:String x:Key="InUseEmail">Email already in use</System:String>
    
