<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">
    
    <!-- Language Panel -->
    <System:String x:Key="LanguageTitle">Languege</System:String>
    
    <!-- Theme Panel -->
    <System:String x:Key="ThemeTitle">Theme</System:String>
    <System:String x:Key="ThemeOptionLight">Light</System:String>
    <System:String x:Key="ThemeOptionDark">Dark</System:String>
    
    <!-- UserInfo Panel -->
    <System:String x:Key="LogOutButton">Log out</System:String>
    
    <!-- Menu -->
    <System:String x:Key="MenuOptionPasswords">Passwords</System:String>
    <System:String x:Key="MenuOptionFolders">Folders</System:String>
    <System:String x:Key="MenuOptionTrash">Trash</System:String>
    
    <!-- Passwords Page -->
    <System:String x:Key="PasswordsPageTitle">All Passwords</System:String>
    
    <!-- Folders Page -->
    <System:String x:Key="FoldersPageTitle">Folders</System:String>
    <System:String x:Key="AddNewFolderPanelTitle">Add new folder</System:String>
    <System:String x:Key="AddNewFolderPanelSaveButton">Save</System:String>
    <System:String x:Key="FolderName">Folder name</System:String>
    <System:String x:Key="FolderNameExist">Folder with that name already exists!</System:String>

    <!-- Trash Page -->
    <System:String x:Key="TrashPageTitle">Trash</System:String>
    <System:String x:Key="TrashPageEmptyTitle">Trash is empty</System:String>

    <!-- CreatePassword Page -->
    <System:String x:Key="CreatePasswordPageTitle">New Password</System:String>
    <System:String x:Key="CreatePasswordTitleTextBoxTitle">Title*</System:String>
    <System:String x:Key="CreatePasswordEmailTextBoxTitle">Email or Username</System:String>
    <System:String x:Key="CreatePasswordPasswordTextBoxTitle">Password*</System:String>
    <System:String x:Key="CreatePasswordFolderTextBoxTitle">Folder</System:String>
